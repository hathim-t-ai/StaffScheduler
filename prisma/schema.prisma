// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = []
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Staff {
  id          String       @id @default(uuid())
  name        String
  grade       String?
  department  String?
  role        String?
  city        String?
  country     String?
  skills      String?
  assignments Assignment[]
}

model Project {
  id          String       @id @default(uuid())
  name        String
  description String?
  partnerName String?
  teamLead    String?
  budget      Float?
  assignments Assignment[]
}

model Assignment {
  id         String   @id @default(uuid())
  staffId    String
  projectId  String
  date       DateTime
  hours      Int
  staff      Staff    @relation(fields: [staffId], references: [id])
  project    Project  @relation(fields: [projectId], references: [id])
}
