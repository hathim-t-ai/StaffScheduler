{
  "general": {
    "whitespace": "space",
    "indentSize": 2,
    "sortImports": true,
    "removeUnusedImports": true,
    "formatOnSave": true
  },
  "javascript": {
    "formatter": "prettier",
    "semicolons": true,
    "quotes": "single",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "organizeImports": true,
    "singleAttributePerLine": false
  },
  "typescript": {
    "formatter": "prettier",
    "semicolons": true,
    "quotes": "single",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "organizeImports": true,
    "singleAttributePerLine": false
  },
  "react": {
    "componentCasing": "PascalCase",
    "propsCasing": "camelCase",
    "stateCasing": "camelCase",
    "defaultExportName": "ComponentName",
    "reactImportStyle": "useNamed"
  },
  "css": {
    "formatter": "prettier",
    "classNaming": "kebab-case"
  },
  "naming": {
    "variables": "camelCase",
    "functions": "camelCase",
    "components": "PascalCase",
    "constants": "UPPER_SNAKE_CASE"
  },
  "linting": {
    "eslint": {
      "enabled": true,
      "rules": {
        "react/jsx-key": "error",
        "react/no-array-index-key": "warn",
        "react/jsx-no-useless-fragment": "warn",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-console": "warn",
        "no-alert": "error",
        "no-unused-vars": "warn",
        "prefer-const": "warn"
      }
    }
  },
  "performance": {
    "rules": {
      "noUnusedImports": true,
      "noConsoleLogging": "warn",
      "useMemo": "recommended",
      "useCallback": "recommended",
      "avoidUnnecessaryRenders": true
    }
  },
  "security": {
    "rules": {
      "noInlineScripts": "warn",
      "useHttpsForExternalResources": "error",
      "sanitizeUserInputs": true,
      "noEval": "error"
    }
  },
  "comments": {
    "requireJSDoc": false,
    "componentDescriptionRequired": true,
    "complexLogicExplanationRequired": true
  },
  "imports": {
    "maxLineLength": 100,
    "grouping": [
      { "name": "React", "match": ["react", "react-*"] },
      { "name": "External Libraries", "match": ["^(?!@|react|../|./|\\./).*"] },
      { "name": "Components", "match": ["^@/components/.*$"] },
      { "name": "Hooks", "match": ["^@/hooks/.*$"] },
      { "name": "Utils", "match": ["^@/utils/.*$"] },
      { "name": "Types", "match": ["^@/types/.*$"] },
      { "name": "Styles", "match": ["^@/styles/.*$", ".*\\.css$", ".*\\.scss$"] },
      { "name": "Local", "match": ["^\\.\\./.*$", "^\\./.*$"] }
    ]
  },
  "paths": {
    "features": ["src/features/*"],
    "components": ["src/components/*"],
    "hooks": ["src/hooks/*"],
    "utils": ["src/utils/*"],
    "types": ["src/types/*"],
    "styles": ["src/styles/*"],
    "pages": ["src/pages/*"]
  },
  "vscode": {
    "recommendations": [
      "dbaeumer.vscode-eslint",
      "esbenp.prettier-vscode",
      "formulahendry.auto-rename-tag",
      "christian-kohler.path-intellisense",
      "ms-vscode.vscode-typescript-next",
      "streetsidesoftware.code-spell-checker",
      "naumovs.color-highlight"
    ]
  },
  "gitCommitMessages": {
    "maxLength": 72,
    "prefixes": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ]
  }
} 